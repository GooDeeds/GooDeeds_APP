<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GooDeeds_APP.DeedDetailPage"
             Title="Deed Info">
    <StackLayout Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="dotnet_bot.svg" HeightRequest="75" WidthRequest="75"/>
            <Label Grid.Column="1" x:Name="TitleText" FontSize="Large" FontAttributes="Bold"/>
        </Grid>
        <Label x:Name="DescriptionText"/>
        <StackLayout Margin="0,20" >
            <Label Text="Info-box title" FontAttributes="Bold" />
            <Label Text="Additional statistics" FontSize="Small" />
        </StackLayout>
        <Button x:Name="btn_Complete"
                    Text="Completed"
                    Clicked="btn_Complete_Clicked">
        </Button>
    </StackLayout>
</ContentPage>
